<p>
<% @blog.comments.each do |comment| %>
  <div class="comment">
    <%= comment.content %><br>
    <%= comment.user.name %> on <%= comment.created_at.to_formatted_s(:long_ordinal)[0..-6] %>
    <% if signed_in? %>
      <% if current_user.admin? %>
        <%= link_to "delete", comment, method: :delete %>
      <% end %>
    <% end %>
  </div>
<% end %>
</p>